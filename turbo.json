{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "passThroughEnv": ["DATABASE_URL", "DISCORD_TOKEN", "DISCORD_CLIENT_ID", "DISCORD_CLIENT_SECRET", "STARTGG_API_KEY", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "cache": false,
      "passThroughEnv": ["DATABASE_URL", "REDIS_URL", "DISCORD_TOKEN", "DISCORD_CLIENT_ID", "DISCORD_CLIENT_SECRET", "STARTGG_API_KEY", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false,
      "passThroughEnv": ["DATABASE_URL", "DISCORD_TOKEN", "DISCORD_CLIENT_ID", "DISCORD_CLIENT_SECRET", "STARTGG_API_KEY", "NEXTAUTH_SECRET", "NEXTAUTH_URL", "PLAYWRIGHT_BASE_URL"]
    },
    "test:smoke": {
      "dependsOn": ["build"],
      "cache": false,
      "passThroughEnv": ["DATABASE_URL", "DISCORD_TOKEN", "DISCORD_CLIENT_ID", "DISCORD_CLIENT_SECRET", "STARTGG_API_KEY", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
    },
    "db:generate": {
      "cache": false,
      "passThroughEnv": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false,
      "passThroughEnv": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "passThroughEnv": ["DATABASE_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}
